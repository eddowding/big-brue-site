---
interface Props {
  name: string;
  role: string;
  photo: string;
  slug: string;
  index?: number;
}

const { name, role, photo, slug, index = 0 } = Astro.props;

const bgColors = ['bg-blush', 'bg-bright', 'bg-sludge', 'bg-stone'];
const textColors = ['text-sludge', 'text-sludge-dark', 'text-white', 'text-sludge'];
const roleColors = ['text-sludge/70', 'text-sludge-dark/70', 'text-bright', 'text-sludge/70'];

const bgColor = bgColors[index % 4];
const textColor = textColors[index % 4];
const roleColor = roleColors[index % 4];
---

<a href={`/speakers/${slug}`} class:list={["speaker-card rounded-2xl p-4 md:p-6 transition-transform hover:scale-[1.02] cursor-pointer block", bgColor]}>
  <div class="aspect-square rounded-xl bg-white/30 mb-4 overflow-hidden">
    <img
      src={photo}
      alt={name}
      class="w-full h-full object-cover mix-blend-luminosity hover:mix-blend-normal transition-all duration-500"
      loading="lazy"
    >
  </div>
  <h3 class:list={["font-serif text-xl md:text-2xl italic", textColor]}>{name}</h3>
  <p class:list={["text-sm font-medium mt-1", roleColor]}>{role}</p>
</a>
