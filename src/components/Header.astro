---
import settings from '../data/settings.json';

const navItems = [
  { href: '/speakers', label: 'Speakers' },
  // { href: '/programme', label: 'Programme' }, // Hidden until programme is finalized
  { href: '/hub', label: 'The Hub' },
  { href: '/tickets', label: 'Tickets' },
  { href: '/info', label: 'Info' },
  { href: '/about', label: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header id="main-header" class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-sm z-50 border-b border-stone transition-all duration-500 ease-out">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div id="header-inner" class="flex items-center justify-between h-24 md:h-28 transition-all duration-500 ease-out">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img id="logo-large" src="/logo_header.svg" alt="Big Brue - Small Town, Big Ideas" class="h-14 md:h-16 w-auto transition-all duration-500 ease-out opacity-100" />
        <img id="logo-small" src="/logo_header_small.svg" alt="Big Brue - Small Town, Big Ideas" class="h-10 md:h-12 w-auto absolute transition-all duration-500 ease-out opacity-0" />
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden lg:flex items-center gap-8">
        {navItems.map(item => (
          <a
            href={item.href}
            class:list={[
              "font-medium transition-colors",
              currentPath === item.href || currentPath.startsWith(item.href + '/')
                ? "text-sludge font-bold"
                : "text-warm-black hover:text-sludge"
            ]}
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- CTA Buttons -->
      <div class="flex items-center gap-3">
        <a href="#newsletter" class="hidden sm:inline-block border-2 border-sludge text-sludge hover:bg-sludge hover:text-white font-bold px-4 py-2 rounded-full transition-colors text-sm">
          Newsletter
        </a>
        <a href="/tickets" class="bg-bright hover:bg-bright-dark text-sludge-dark font-bold px-5 py-2.5 rounded-full transition-colors text-sm md:text-base">
          Buy Tickets
        </a>
        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="lg:hidden p-2 text-sludge">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden bg-white border-t border-stone">
    <nav class="px-4 py-4 space-y-3">
      {navItems.map(item => (
        <a
          href={item.href}
          class:list={[
            "block py-2 font-medium transition-colors",
            currentPath === item.href ? "text-sludge font-bold" : "text-warm-black"
          ]}
        >
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const header = document.getElementById('main-header');
  const headerInner = document.getElementById('header-inner');
  const logoLarge = document.getElementById('logo-large');
  const logoSmall = document.getElementById('logo-small');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Scroll detection for header compression
  let isScrolled = false;
  const scrollThreshold = 50;

  function handleScroll() {
    const shouldCompress = window.scrollY > scrollThreshold;

    if (shouldCompress !== isScrolled) {
      isScrolled = shouldCompress;

      if (isScrolled) {
        // Compressed state
        headerInner?.classList.remove('h-24', 'md:h-28');
        headerInner?.classList.add('h-16', 'md:h-20');
        logoLarge?.classList.remove('opacity-100');
        logoLarge?.classList.add('opacity-0');
        logoSmall?.classList.remove('opacity-0');
        logoSmall?.classList.add('opacity-100');
      } else {
        // Expanded state
        headerInner?.classList.remove('h-16', 'md:h-20');
        headerInner?.classList.add('h-24', 'md:h-28');
        logoLarge?.classList.remove('opacity-0');
        logoLarge?.classList.add('opacity-100');
        logoSmall?.classList.remove('opacity-100');
        logoSmall?.classList.add('opacity-0');
      }
    }
  }

  window.addEventListener('scroll', handleScroll, { passive: true });
  handleScroll(); // Check initial state
</script>
